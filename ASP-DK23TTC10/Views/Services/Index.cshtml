@model List<ASP_DK23TTC10.Models.service>
@{
    ViewBag.Title = "Thông tin dịch vụ";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">

        <div class="row">
            <div class="col-4">
                <h2>Thông tin dịch vụ</h2>
            </div>
            <div class="col-4">
                <form class="d-flex" role="search" action="/services/index" method="post">
                    <input class="form-control me-2" type="search" placeholder="Tìm dịch vụ.." name="search_post" value="@ViewBag.value_search">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </form>
            </div>
            <div class="col-4">

                <div class="container text-center">
                    <div class="row">
                        <div class="col-auto me-auto"></div>
                        <div class="col-auto"><a class="btn btn-info" href="@Url.Action("Create","Services")">Tạo bài viết</a></div>
                    </div>
                </div>

                
            </div>
        </div>
        
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Tiêu đề</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Thời gian cập nhật</th>
                    <th scope="col">Sửa</th>
                    <th scope="col">Xóa</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th width="10px" scope="row"><a href="/services/detail/@item.id">@item.id</a></th> 
                        <td width="290px"><a href="/home/ctdvlienhe/@item.id">@item.name</a></td>
                        <td width="750px">@item.description</td>
                        <td>@item.created_at</td>
                        <td><a href="/services/edit/@item.id">Sửa</a></td>
                        <td><a href="/services/delete/@item.id">Xóa</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-2"></div>
</div>