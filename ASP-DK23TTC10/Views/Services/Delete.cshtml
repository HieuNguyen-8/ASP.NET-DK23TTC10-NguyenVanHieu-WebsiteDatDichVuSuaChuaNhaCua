@model ASP_DK23TTC10.Models.service

@{
    ViewBag.Title = "Xóa- dịch vụ";
    Layout = "~/Views/Shared/_NoneSlide.cshtml";
}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="row">
            <div class="col-6">
                <h2>Xóa- dịch vụ</h2>
            </div>
            <div class="col-6">
                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","Services")">Trở về Dashboard dịch vụ</a>
            </div>
        </div>
        <form action="/services/delete/@Model.id" method="post">
            <input type="hidden" name="id" value="@Model.id" />

            <table class="table table-striped table-hover">
                <tr>
                    <th scope="col">Bạn có chắc xóa ? </th>
                </tr>
                <tr>
                    <td scope="col">@Model.name</td>
                </tr>
            </table>

            <button type="submit" class="mb-3 btn btn-primary">Xác nhận</button>
            <a class="mb-3 btn btn-secondary" href="@Url.Action("Index","Services")">Cancel</a>
        </form>

    </div>
    <div class="col-2"></div>
</div>