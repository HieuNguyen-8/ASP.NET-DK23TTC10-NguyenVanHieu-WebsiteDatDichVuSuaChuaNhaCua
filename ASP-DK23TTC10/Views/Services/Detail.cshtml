@model ASP_DK23TTC10.Models.service

@{
    ViewBag.Title = "Chi tiết dịch vụ";
    Layout = "~/Views/Shared/_NoneSlide.cshtml";
}

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">

        <div class="row">
            <div class="col-6">
                <h2>Chi tiết dịch vụ</h2>
            </div>
            <div class="col-6">
                <h2>
                    <a href="@Url.Action("Index","Services")">Quay lại</a>
                </h2>
            </div>
        </div>

        <table class="table table-striped table-hover">
            <tr>
                <th scope="col">STT</th>
                <td scope="col">@Model.id</td>
            </tr>
            <tr>
                <th scope="col">Tiêu đề dịch vụ</th>
                <td scope="col">@Model.name</td>
            </tr>
            <tr>
                <th scope="col">Nội dung</th>
                <td scope="col">@Model.description</td>
            </tr>
            <tr>
                <th scope="col">Thời gian cập nhật</th>
                <td scope="col">@Model.created_at</td>
            </tr>

        </table>
    </div>
    <div class="col-2"></div>
</div>

