@model ASP_DK23TTC10.Models.service

@{
    ViewBag.Title = "Sửa bài viết - dịch vụ";
    Layout = "~/Views/Shared/_NoneSlide.cshtml";
}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="row">
            <div class="col-6">
                <h2>Sửa bài viết - dịch vụ</h2>
            </div>
            <div class="col-6">     
                <a class="btn btn-outline-primary btn-sm" href="@Url.Action("Index","Services")">Trở về</a>
            </div>
        </div>
        <form action="/services/edit/@Model.id" method="post">
            <input type="hidden" name="id" value="@Model.id" />

            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Tiêu đề</label>
                <input type="text" class="form-control" id="" aria-describedby="" name="name" value="@Model.name">
                <div id="" class="form-text">Sửa tiêu đề, không quá 250 ký tự</div>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Nhập nội dung bài viết vào đây" id="" style="height: 100px" name="description">@Model.description</textarea>
                <label for="">Sửa Nội dung</label>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Thời gian cập nhật</label>
                <input type="date" class="form-control" id="" aria-describedby="" value="@Model.created_at" name="created_at">
            </div>
            <button type="submit" class="mb-3 btn btn-primary">Sửa</button>
            <a class="mb-3 btn btn-secondary" href="@Url.Action("Index","Services")">Cancel</a>
        </form>

    </div>
    <div class="col-2"></div>
</div>

