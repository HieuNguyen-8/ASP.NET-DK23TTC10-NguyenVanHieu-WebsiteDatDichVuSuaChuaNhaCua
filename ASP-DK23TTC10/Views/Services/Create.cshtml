
@{
    ViewBag.Title = "Tạo bài viết về dịch vụ";
    Layout = "~/Views/Shared/_NoneSlide.cshtml";
}
<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <div class="row">
            <div class="col-6">
                <h2>Tạo bài viết về dịch vụ</h2>
            </div>
            <div class="col-6"> </div>
        </div>
        <form action="/services/create" method="post">
            <div class="mb-3">
                <label for="exampleInputEmail1" class="form-label">Tiêu đề</label>
                <input type="text" class="form-control" id="" aria-describedby="" name="name">
                <div id="" class="form-text">Nhập tiêu đề, không quá 250 ký tự</div>
            </div>
            <div class="form-floating mb-3">
                <textarea class="form-control" placeholder="Leave a comment here" id="" style="height: 100px" name="description">Nhập nội dung bài viết vào đây</textarea>
                <label for="">Nội dung</label>
            </div>
            <div class="mb-3">
                <label for="exampleInputPassword1" class="form-label">Thời gian cập nhật</label>
                <input type="date" class="form-control" id="" aria-describedby="" value="" name="created_at">
            </div>
            <button type="submit" class="mb-3 btn btn-primary">Tạo</button>
            <a class="mb-3 btn btn-secondary" href="@Url.Action("Index","Services")">Cancel</a>
        </form>

    </div>
    <div class="col-2"></div>
</div>