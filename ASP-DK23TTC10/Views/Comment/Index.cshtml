@model List<ASP_DK23TTC10.Models.comment>

@{
    ViewBag.Title = "Quản lý đánh giá khách hàng";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Quản lý đánh giá khách hàng</h2>

<div class="row">
    <div class="col-2"></div>
    <div class="col-8">
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col">STT</th>
                    <th scope="col">Thông tin khách hàng</th>
                    <th scope="col">mã đơn dịch vụ</th>
                    <th scope="col">Mức độ đánh giá</th>
                    <th scope="col">Nội dung</th>
                    <th scope="col">Ảnh mô tả</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.id</th>
                        <td>@item.id_users</td>
                        <td>@item.invoice_code</td>
                        <td>@item.options</td>
                        <td>@item.content</td>
                        <td>@item.image</td>                     
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-2"></div>
</div>
